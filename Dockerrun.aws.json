{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "muhammadatef/multi-client",
            "hostname": "client" ,
            "essintial": false ,
            "memory": 128
        },
        {
            "name": "server",
            "image": "muhammadatef/multi-server",
            "hostname":"api",
            "essintial": false ,
            "memory": 128
        },
        {
            "name": "worker" ,
            "image":"muhammadatef/multi-worker",
            "hostname": "worker",
            "essintial": false ,
            "memory": 128
        },
        {
            "name": "nginx" ,
            "image": "muhammadatef/multi-nginx",
            "hostname": "nginx" ,
            "essintial": true ,
            "portMappings": [
                {
                    "hostport": 80 ,
                    "containerport": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
               
            
        }
    ]

}